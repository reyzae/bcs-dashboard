{
    "name": "bytebalok/dashboard",
    "description": "Modern Business Management System - Bytebalok System",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Bytebalok Team",
            "email": "dev@bytebalok.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-session": "*",
        "ext-gd": "*",
        "ext-openssl": "*",
        "ext-mbstring": "*",
        "phpoffice/phpspreadsheet": "^1.29",
        "tecnickcom/tcpdf": "^6.6",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Bytebalok\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bytebalok\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse app/",
        "cs-check": "phpcs --standard=PSR12 app/",
        "cs-fix": "phpcbf --standard=PSR12 app/",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ],
        "post-install-cmd": [
            "@php -r \"if (!file_exists('storage/logs')) mkdir('storage/logs', 0777, true);\"",
            "@php -r \"if (!file_exists('storage/cache')) mkdir('storage/cache', 0777, true);\"",
            "@php -r \"if (!file_exists('storage/uploads/products')) mkdir('storage/uploads/products', 0777, true);\"",
            "@php -r \"if (!file_exists('storage/uploads/avatars')) mkdir('storage/uploads/avatars', 0777, true);\"",
            "@php -r \"if (!file_exists('storage/uploads/temp')) mkdir('storage/uploads/temp', 0777, true);\"",
            "@php -r \"if (!file_exists('storage/backups')) mkdir('storage/backups', 0777, true);\"",
            "@php -r \"if (!file_exists('storage/sessions')) mkdir('storage/sessions', 0777, true);\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

